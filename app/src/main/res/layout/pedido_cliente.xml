<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/depedido"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="su pedido esta casi listo..."
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/datosingresar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="ingrese sus datos para enviar nuestro repartidor a su ubicacion"
            android:gravity="center_horizontal"
            android:textSize="25sp"
            android:textColor="@color/colorPrimary"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20sp">
            <TextView
                android:id="@+id/clientepeticion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="nombre de la persona que recibira el pedido:"
                android:gravity="left"
                android:textSize="25sp"
/>
            <EditText
                android:id="@+id/nombredelcliente"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="nombre del cliente"
                android:gravity="center_horizontal"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/clientedireccion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="direccion:"
                android:gravity="left"
                android:textSize="25sp"
/>
            <EditText
                android:id="@+id/direcciondelcliente"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="direccion"
                android:gravity="center_horizontal"
                android:textSize="25sp" />

        </LinearLayout>
        <ImageView
            android:layout_width="180dp"
            android:layout_height="48pt"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop" />
        <Button
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:text="enviar">

        </Button>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>