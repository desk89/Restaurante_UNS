<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/preguntapedido"
            android:layout_width="400sp"
            android:layout_height="30sp"
            android:text="Â¿que desea pedir?"
            android:gravity="center_horizontal"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"
            android:ellipsize="end"
            android:lines="1"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="300sp"
            android:layout_height="40sp"
            android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="40sp"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/cantidad"
            android:layout_width="200sp"
            android:layout_height="30sp"
            android:text="cantidad"
            android:gravity="center_horizontal"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"
            />
        <EditText
            android:layout_width="200sp"
            android:layout_height="50sp"
            android:hint="0000"
            android:gravity="left"
            android:textSize="25sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="30sp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/clienteplatos"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="platos"
                android:gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryDark"
                android:ellipsize="end"
                android:lines="1"/>


            <TextView
                android:id="@+id/clienteprecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="precio"
                android:gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryDark"
                android:ellipsize="end"
                android:lines="1"/>

        </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/clienteplato1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="pollo a la brasa"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:ellipsize="end"
                android:lines="1"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="30pt"
                android:src="@drawable/pollo"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <TextView
                android:id="@+id/precio1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="S/20.00"
                android:textSize="50dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="left"

                android:lines="1"/>

        </LinearLayout>


    </LinearLayout>
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/clienteplato2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="chaufa"

                    android:textSize="20dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:ellipsize="end"
                    android:lines="1"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="30pt"
                    android:src="@drawable/chaufa"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_horizontal"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/precio2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:text="S/15.00"
                    android:textSize="50dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="left"

                    android:lines="1"/>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/clienteplato3"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="lomo saltado"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:ellipsize="end"
                    android:lines="1"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="30pt"
                    android:src="@drawable/lomo_saltado"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/precio3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:text="S/25.00"
                    android:textSize="50dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="left"

                    android:lines="1"/>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/clienteplato4"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="ceviche"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:ellipsize="end"
                    android:lines="1"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="30pt"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ceviche"
                    android:scaleType="centerCrop"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvItemScheduleConfrenceName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:text="S/22.00"
                    android:textSize="50dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="left"

                    android:lines="1"/>

            </LinearLayout>


        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="continuar">

        </Button>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>